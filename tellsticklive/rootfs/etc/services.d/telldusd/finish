#!/command/with-contenv bashio
# ==============================================================================
# Take down the S6 supervision tree when telldusd fails
# ==============================================================================
if [[ "${1}" -ne 0 ]] && [[ "${1}" -ne 256 ]]; then
   bashio::log.warning "telldusd crashed, halting add-on"
   /run/s6/basedir/bin/halt
 fi

 bashio::log.info "telldusd stopped, restarting..."
